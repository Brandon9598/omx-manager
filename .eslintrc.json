{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "extends": "standard",
  "plugins": [
    "flow-vars",
    "mocha"
  ],
  "rules": {
    "flow-vars/define-flow-type": 1,
    "flow-vars/use-flow-type": 1,
    "mocha/no-exclusive-tests": 2,
    "no-useless-constructor": 0
  }
}
