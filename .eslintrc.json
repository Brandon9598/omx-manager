{
  "root": true,
  "extends": ["plugin:@typescript-eslint/recommended", "standard"],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "brace-style": [ "error", "stroustrup" ],
    "@typescript-eslint/indent": "off",
    "@typescript-eslint/no-var-requires": "off"
  }
}
